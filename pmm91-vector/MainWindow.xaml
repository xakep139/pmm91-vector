<Window x:Name="ProgramWindow" x:Class="pmm91_vector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:pmm91_vector"
        Title="Векторный графический редактор" Height="480" Width="640" MinWidth="640" MinHeight="480">
    <Window.Resources>
        <my:Command x:Key="CommandKey"/>
    </Window.Resources>
    <Grid>
        <Menu x:Name="MainMenu" VerticalAlignment="Top">
            <MenuItem x:Name="miFile" Header="Файл">
                <MenuItem x:Name="miExit" Header="Выход" Command="{StaticResource CommandKey}" CommandParameter="Exit"/>
            </MenuItem>
            <MenuItem x:Name="miEdit" Header="Правка">
                <MenuItem x:Name="miUndo" Header="Отменить" Command="{StaticResource CommandKey}" CommandParameter="Undo"/>
                <MenuItem x:Name="miRedo" Header="Вернуть" Command="{StaticResource CommandKey}" CommandParameter="Redo"/>
            </MenuItem>
        </Menu>
        <Canvas x:Name="MainCanvas"></Canvas>
    </Grid>
</Window>
